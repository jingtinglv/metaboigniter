{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/metaboigniter/master/assets/schema_input.json",
    "title": "nf-core/metaboigniter pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "unique": true,
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["sample_name"]
            },
            "type": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Type must be provided and cannot contain spaces",
                "meta": ["type"]
            },
            "level": {
                "errorMessage": "level must be one of MS1,MS2 or MS12",
                "enum": ["MS1", "MS2", "MS12"],
                "meta": ["level"]
            },
            "msfile": {
                "type": "string",
                "pattern": "^\\S+\\.mzML",
                "unique": true,
                "format": "file-path",
                "exists": true,
                "errorMessage": "mzML file must be provided, cannot contain spaces and must have extension '.mzML'",

            }
        },
        "required": ["sample", "type","level","msfile"]
    }
}
